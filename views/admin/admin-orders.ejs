<%- include("../../views/partials/admin/header") %> 
<div class="main-panel">
  <div class="content-wrapper  bg-white">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title text-center text-dark">Order Details</h2>
            <div class="table-responsive">
              <table class="table table-hover" border="1">
                <thead>
                  <tr>    
                    <th>Order ID</th>
                    <th>User</th>
                   
                    <th>Total Amount</th>
                    <th>Payment</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.orderId %></td>
                    <td><%= order.userId.name %></td>
                    <td>â‚¹<%= order.finalAmount %></td>
                    <td><%= order.paymentMethod %></td>
                    <td><%= order.status %></td>
                    <td>
                        <a href="/admin/getorderdetails/<%=order._id%>" style="text-decoration: none;"><button class="btn"style="background-color:#28A745">View More</button></a>
                      
                       
                    </td>
                </tr>
                <% }); %>
            </tbody>
              </table> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
    <%for(let i=1;i<=totalPages;i++){%>
     <li class="page-item <%=(i===currentPage) ? 'active' : '' %>">
         <a class="page-link" href="?page=<%= i %>"><%= i %></a>
     </li>
     <%}%>
     </ul>

 </div>

